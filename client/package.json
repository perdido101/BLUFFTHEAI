{
  "name": "bluff-ai-client",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://perdido101/bluff.git",
  "dependencies": {
    "@types/node": "^16.18.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "axios": "^1.6.0",
    "framer-motion": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "styled-components": "^6.0.0",
    "typescript": "^4.9.5",
    "core-js": "^3.30.0",
    "@tensorflow/tfjs": "^4.10.0",
    "@tensorflow/tfjs-vis": "^1.5.1",
    "natural": "^6.5.0",
    "compromise": "^14.10.0",
    "ml-matrix": "^6.10.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "build:development": "env-cmd -f .env.development craco build",
    "build:production": "env-cmd -f .env.production craco build",
    "build:analyze": "ANALYZE=true npm run build:production",
    "build:compress": "npm run build:production && gzip-size 'build/static/js/*.js'",
    "test": "craco test",
    "test:coverage": "craco test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test start http://localhost:3000 cypress:run",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm-run-all --parallel lint typecheck test:coverage",
    "analyze:bundle": "source-map-explorer 'build/static/js/*.js'",
    "serve:prod": "serve -s build -l 3000"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/reportWebVitals.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "cypress": "^12.0.0",
    "start-server-and-test": "^2.0.0",
    "@cypress/typescript-preprocessor": "^5.0.0",
    "gh-pages": "^6.0.0",
    "env-cmd": "^10.1.0",
    "source-map-explorer": "^2.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "eslint": "^8.42.0",
    "@craco/craco": "^7.1.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "babel-plugin-styled-components": "^2.1.1",
    "compression-webpack-plugin": "^10.0.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "gzip-size-cli": "^5.1.0",
    "serve": "^14.2.0"
  }
}
